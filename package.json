{
  "name": "claudecat-mcp-server",
  "version": "1.0.0",
  "description": "ClaudeCat Proactive Context Engine - MCP Server for Claude Code accuracy improvement",
  "main": "dist/server.js",
  "type": "module",
  "bin": {
    "claudecat": "dist/multi-instance-server.js",
    "claudecat-single": "dist/server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "dev:multi": "tsx watch src/multi-instance-server.ts",
    "start": "node dist/server.js",
    "start:multi": "node dist/multi-instance-server.js",
    "server:stdio": "tsx src/server.ts",
    "server:multi": "tsx src/multi-instance-server.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "claude-code",
    "context-engine",
    "project-awareness",
    "pattern-detection"
  ],
  "author": "ClaudeCat Project",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@typescript-eslint/typescript-estree": "^8.40.0",
    "chokidar": "^3.6.0",
    "glob": "^10.4.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
